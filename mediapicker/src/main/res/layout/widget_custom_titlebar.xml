<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >
    <RelativeLayout
        android:id="@+id/rv_back"
        android:layout_width="60dp"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        >
      <ImageView
          android:id="@+id/iv_back"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_centerInParent="true"
          />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_menu02"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_bg"
        android:visibility="invisible"
        >
      <ImageView
          android:id="@+id/iv_menu02"
          android:layout_width="23dp"
          android:layout_height="23dp"
          android:layout_centerInParent="true"
          />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_menu01"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/rv_menu02"
        android:background="@drawable/selector_btn_bg"
        android:visibility="invisible"
        >
      <ImageView
          android:id="@+id/iv_menu01"
          android:layout_width="23dp"
          android:layout_height="23dp"
          android:layout_centerInParent="true"
          />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv_menu_checkbox"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        >
      <CheckBox
          android:id="@+id/cb_select"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="16dp"
          android:button="@drawable/checkbox_selector"
          />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_toLeftOf="@id/rv_menu02"
        android:layout_toRightOf="@id/rv_back"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="17sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20.5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="17sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20.5dp"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="17sp"
        android:visibility="invisible"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@drawable/select_pressed"/>
</LinearLayout>
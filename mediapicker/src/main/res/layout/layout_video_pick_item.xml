<?xml version="1.0" encoding="utf-8"?>
<com.app.imagepicker.widget.SquareRelelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_cell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <CheckBox
      android:id="@+id/checkbox"
      android:layout_width="@dimen/dp_20"
      android:layout_height="@dimen/dp_20"
      android:layout_alignParentRight="true"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:button="@drawable/checkbox_selector"
      />

  <ImageView
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:src="@drawable/video_pause"
      />

  <TextView
      android:id="@+id/video_duration"
      android:textColor="@color/white"
      android:textSize="13sp"
      android:paddingTop="5dp"
      android:paddingBottom="2dp"
      android:paddingRight="3dp"
      android:paddingLeft="5dp"
      android:shadowColor="#666666"
      android:shadowRadius="1"
      android:shadowDx="0"
      android:shadowDy="0"
      android:text="00:00"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</com.app.imagepicker.widget.SquareRelelativeLayout>